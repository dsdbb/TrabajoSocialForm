<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/portada"
    tools:context="ar.edu.uns.cs.trabajosocialform.MainActivity">


        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/nuevaEntrada"
            android:layout_width="160sp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:onClick="nuevaEntrada"
            android:text="@string/nueva_entrada"
            android:theme="@style/AppTheme.Button"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/verEntradas"
            android:layout_width="160sp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:onClick="verEntradas"
            android:text="@string/ver_formularios"
            android:theme="@style/AppTheme.Button"
            app:layout_constraintEnd_toEndOf="parent"/>

    </RelativeLayout>





</android.support.constraint.ConstraintLayout>
