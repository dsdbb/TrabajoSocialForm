<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/titulo_detalles_apoderado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo_detalles_apoderado"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        android:scrollbarStyle="outsideInset"
        app:layout_constraintTop_toBottomOf="@id/titulo_detalles_apoderado">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- NOMBRE -->
            <include
                android:id="@+id/detalle_nombre_apoderado"
                layout="@layout/detalles_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- APELLIDO -->
            <include
                android:id="@+id/detalle_apellido_apoderado"
                layout="@layout/detalles_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- CUIL -->
            <include
                android:id="@+id/detalle_cuil_apoderado"
                layout="@layout/detalles_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- TELEFONO PRINCIPAL -->
            <include
                android:id="@+id/detalle_telefono_principal_apoderado"
                layout="@layout/detalles_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- FECHA NACIMIENTO -->
            <include
                android:id="@+id/detalle_fecha_nacimiento_apoderado"
                layout="@layout/detalles_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- MOTIVOS DE PODER -->
            <include
                android:id="@+id/detalle_motivos_poder_apoderado"
                layout="@layout/detalles_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>