<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/titulo_salud_familiar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo_salud_familiar"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/panel_cobertura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_salud_familiar">

        <Spinner
            android:id="@+id/spinner_cobertura"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:entries="@array/cobertura_opciones"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cobertura_tv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cobertura_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/cobertura"
            app:layout_constraintBaseline_toBaselineOf="@+id/spinner_cobertura"
            app:layout_constraintEnd_toStartOf="@+id/spinner_cobertura"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <!-- Fecha de Nacimiento -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/panel_embarazo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/panel_cobertura">
        <EditText
            android:id="@+id/fecha_parto_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:focusable="false"
            android:clickable="true"
            android:onClick="elegirFecha"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/fecha_parto_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fecha_parto"
            app:layout_constraintBaseline_toBaselineOf="@+id/fecha_parto_et"
            app:layout_constraintEnd_toStartOf="@+id/fecha_parto_et"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/panel_discapacidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/panel_embarazo">

        <ImageButton
            android:id="@+id/nueva_discapacidad"
            android:layout_width="19dp"
            android:layout_height="23dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_button"
            android:contentDescription="plus_button"
            android:onClick="nuevaDiscapacidad"
            android:scaleType="fitCenter"
            android:src="@drawable/plus"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/nueva_discapacidad_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/discapacidad"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/panel_nueva_discapacidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/nueva_discapacidad_tv">


        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/panel_enfermedad_cronica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/panel_discapacidad">

        <ImageButton
            android:id="@+id/nueva_enfermedad_cronica"
            android:layout_width="19dp"
            android:layout_height="23dp"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_button"
            android:contentDescription="plus_button"
            android:onClick="nuevaEnfermedadCronica"
            android:scaleType="fitCenter"
            android:src="@drawable/plus"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/nueva_enfermedad_cronica_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/enfermedad_cronica"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/panel_nueva_enfermedad_cronica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/nueva_enfermedad_cronica_tv">


        </LinearLayout>
    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/panel_independencia_funcional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/panel_enfermedad_cronica">

        <Spinner
            android:id="@+id/spinner_independencia_funcional"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:entries="@array/independencia_funcional_opciones"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/independencia_funcional_tv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/independencia_funcional_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/independencia_funcional"
            app:layout_constraintBaseline_toBaselineOf="@+id/spinner_independencia_funcional"
            app:layout_constraintEnd_toStartOf="@+id/spinner_independencia_funcional"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>