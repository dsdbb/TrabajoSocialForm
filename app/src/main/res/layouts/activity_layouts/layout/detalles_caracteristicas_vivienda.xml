<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/titulo_detalles_caracteristicas_vivienda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo_detalles_caracteristicas_vivienda"
        app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fillViewport="true"
            android:scrollbarStyle="outsideInset"
            app:layout_constraintTop_toBottomOf="@id/titulo_detalles_caracteristicas_vivienda">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- TECHO -->
                <include
                    android:id="@+id/detalle_techo"
                    layout="@layout/detalles_item"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- REVESTIMIENTO TECHO -->
                <include
                    android:id="@+id/detalle_revestimiento_techo"
                    layout="@layout/detalles_item"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- PAREDES -->
                <include
                    android:id="@+id/detalle_paredes"
                    layout="@layout/detalles_item"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


                <!-- REVESTIMIENTO PAREDES -->
                <include
                    android:id="@+id/detalle_revestimiento_paredes"
                    layout="@layout/detalles_item"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- PISOS -->
                <include
                    android:id="@+id/detalle_pisos"
                    layout="@layout/detalles_item"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- AGUA -->
                <include
                    android:id="@+id/detalle_agua"
                    layout="@layout/detalles_item"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- FUENTE AGUA -->
                <include
                    android:id="@+id/detalle_fuente_agua"
                    layout="@layout/detalles_item"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- BAÑO -->
                <include
                    android:id="@+id/detalle_baño"
                    layout="@layout/detalles_item"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- BAÑO TIENE -->
                <include
                    android:id="@+id/detalle_baño_tiene"
                    layout="@layout/detalles_item"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- DESAGÜE -->
                <include
                    android:id="@+id/detalle_desague"
                    layout="@layout/detalles_item"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- COCINA -->
                <include
                    android:id="@+id/detalle_cocina"
                    layout="@layout/detalles_item"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- ELECTRICIDAD -->
                <include
                    android:id="@+id/detalle_electricidad"
                    layout="@layout/detalles_item"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- COMBUSTIBLE COCINA -->
                <include
                    android:id="@+id/detalle_combustible_cocina"
                    layout="@layout/detalles_item"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>
        </ScrollView>


</android.support.constraint.ConstraintLayout>