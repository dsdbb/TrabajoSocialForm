<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- TITULO -->
    <include
        android:id="@+id/titulo_detalles_infraestructura_barrial"
        layout="@layout/titulo_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        android:scrollbarStyle="outsideInset"
        app:layout_constraintTop_toBottomOf="@id/titulo_detalles_infraestructura_barrial">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- INFRAESTRUCTURA CALLES -->
            <include
                android:id="@+id/detalle_infraestructura_calles"
                layout="@layout/detalles_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- ILUMINACIÓN PUBLICA -->
            <include
                android:id="@+id/detalle_iluminacion_publica"
                layout="@layout/detalles_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- INUNDACIÓN -->
            <include
                android:id="@+id/detalle_inundacion"
                layout="@layout/detalles_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- RECOLECCIÓN RESIDUOS -->
            <include
                android:id="@+id/detalle_recoleccion_residuos"
                layout="@layout/detalles_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <!-- DISTANCIA EDUCACION -->
            <include
                android:id="@+id/detalle_distancia_educacion"
                layout="@layout/detalles_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- DISTANCIA SALUD -->
            <include
                android:id="@+id/detalle_distancia_salud"
                layout="@layout/detalles_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- DISTANCIA TRANSPORTE -->
            <include
                android:id="@+id/detalle_distancia_transporte"
                layout="@layout/detalles_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>