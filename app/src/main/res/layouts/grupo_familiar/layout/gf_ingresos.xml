<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titulo_ingresos_familiar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo_ingresos_familiar"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/panel_ingresos_laborales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/titulo_ingresos_familiar">

        <EditText
            android:id="@+id/ingresos_laborales_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/ingresos_laborales_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/ingresos_laborales"
            app:layout_constraintBaseline_toBaselineOf="@+id/ingresos_laborales_et"
            app:layout_constraintEnd_toStartOf="@+id/ingresos_laborales_et"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/panel_ingresos_no_laborales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/panel_ingresos_laborales">

        <ImageButton
            android:id="@+id/nuevo_ingreso_no_laboral_btn"
            android:layout_width="19dp"
            android:layout_height="23dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_button"
            android:contentDescription="plus_button"
            android:onClick="nuevoIngresoNoLaboral"
            android:scaleType="fitCenter"
            android:src="@drawable/plus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ingresos_no_laborales_tv" />

        <TextView
            android:id="@+id/ingresos_no_laborales_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/ingresos_no_laborales"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/panel_nuevo_ingreso_no_laboral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/ingresos_no_laborales_tv">


        </LinearLayout>
    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/panel_programas_sociales_sti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/panel_ingresos_no_laborales">

        <ImageButton
            android:id="@+id/nuevo_programa_social_sti_btn"
            android:layout_width="19dp"
            android:layout_height="23dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_button"
            android:contentDescription="plus_button"
            android:onClick="nuevoProgramaSocialSti"
            android:scaleType="fitCenter"
            android:src="@drawable/plus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/programa_social_sti_tv" />

        <TextView
            android:id="@+id/programa_social_sti_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/programas_sociales_sti"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/panel_nuevo_programa_social_sti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/programa_social_sti_tv">


        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>