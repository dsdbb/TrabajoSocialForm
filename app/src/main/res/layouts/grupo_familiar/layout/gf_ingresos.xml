<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titulo_ingresos_familiar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo_ingresos_familiar"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/panel_ingresos_laborales_familiar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/titulo_ingresos_familiar">

        <EditText
            android:id="@+id/ingresos_laborales_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/ingresos_laborales_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/ingresos_laborales"
            app:layout_constraintBaseline_toBaselineOf="@+id/ingresos_laborales_et"
            app:layout_constraintEnd_toStartOf="@+id/ingresos_laborales_et"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>