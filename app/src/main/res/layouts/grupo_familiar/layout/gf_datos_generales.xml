<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titulo_datos_generales_familiar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo_datos_generales_familiar"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        android:scrollbarStyle="outsideInset"
        app:layout_constraintTop_toBottomOf="@id/titulo_datos_generales_familiar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- NOMBRE -->
            <include
                android:id="@+id/panel_nombres_familiar"
                layout="@layout/tv_et"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- APELLIDO -->
            <include
                android:id="@+id/panel_apellidos_familiar"
                layout="@layout/tv_et"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <!-- TIPO DE DOCUMENTO -->
            <include
                android:id="@+id/panel_tipo_doc_familiar"
                layout="@layout/tv_spinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- CUIL -->
            <include
                android:id="@+id/panel_cuil_familiar"
                layout="@layout/tv_et"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- SEXO -->
            <include
                android:id="@+id/panel_sexo_familiar"
                layout="@layout/tv_spinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- NACIONALIDAD -->
            <include
                android:id="@+id/panel_nacion_familiar"
                layout="@layout/tv_spinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- FECHA NACIMIENTO -->
            <include
                android:id="@+id/panel_fecha_nac_familiar"
                layout="@layout/tv_et_fecha"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- ESTADO CIVIL -->
            <include
                android:id="@+id/panel_estado_civil_familiar"
                layout="@layout/tv_spinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- VINCULO -->
            <include
                android:id="@+id/panel_vinculo_familiar"
                layout="@layout/tv_spinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- NUCLEO -->
            <include
                android:id="@+id/panel_nucleo_familiar"
                layout="@layout/tv_spinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>