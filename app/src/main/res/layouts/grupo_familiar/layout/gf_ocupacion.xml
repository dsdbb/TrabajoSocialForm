<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/titulo_ocupacion_familiar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo_ocupacion_familiar"/>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        android:scrollbarStyle="outsideInset"
        app:layout_constraintTop_toBottomOf="@id/titulo_ocupacion_familiar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CONDICION DE ACTIVIDAD -->
            <include
                android:id="@+id/panel_condicion_actividad"
                layout="@layout/tv_spinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- PUESTO DE TRABAJO -->
            <include
                android:id="@+id/panel_puesto_trabajo"
                layout="@layout/tv_spinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- APORTE JUBILATORIO -->
            <include
                android:id="@+id/panel_aporte_jubilatorio"
                layout="@layout/tv_spinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- DURACIÃ“N -->
            <include
                android:id="@+id/panel_duracion_empleo"
                layout="@layout/tv_spinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- TIPO DE ACTIVIDAD-->
            <include
                android:id="@+id/panel_tipo_actividad"
                layout="@layout/tv_spinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- CALIFICACION-->
            <include
                android:id="@+id/panel_calificacion"
                layout="@layout/tv_spinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>